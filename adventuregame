print("Welcome to Treasure Island.")
print("Your mission is to find the treasure. ") 

print("*" * 15)

fork_in_path = input("You come across a fork in the road, do you: go left 'L' or go right 'R'? ")

print("*" * 20)

if fork_in_path == "L" or fork_in_path == "l":
  print("You go to the left.\n")
  print("You find yourself walking along a river.\n")
  print("Across the river is a forest.\n")
  print("*" * 20)
  print("After a few minutes of walking you see a clearing on the other side of the river.\n")
  river = input("Do you 'swim' or do you 'wait'?\n")
  river = river.lower()
  if river == "wait" or river == "Wait":
    print("\nYou chose to wait.")
    print("SPLASH!")
    print("As your waiting a trout jumps out of the water.")
    print("Caught off guard it sends you stumbling back.")
    print("You fall onto a rock and a stone bridge rises out of the water.\n")
    print("So You continue Onward.\n")

    print("After half a day of walking in the dark forest it starts to grow lighter.")

    door = input("do you 'look' behind you or do you go 'inside'?\n")
    if door == "look":
      print("You turn around to see what is running towards you.")
      print("CRUNCH!\n")
      print("SQUELCH!\n")
      print("GURGLE! GURGLE\n")
      print("The monster guarding the treasure found you.")
      print("You were it's lunch.")
      print("\nGAME OVER")
    
    elif door == "inside":
      print("You chose to go inside the house.")
      print("THUMP!")
      print("\nWhatever was behind you slammed against the door.")
      print("But the door doesn't budge.")
      print("You explore the old house which looks more like an asylum than a house.")
      print("\nAt the end of the hallway you stand in front of three doors.")
      three_doors = input("Do you go inside the 'Red' door, the 'Blue' door, or the 'Yellow' door?\n")

      print("*" * 20)

      if three_doors == "red" or three_doors == "Red":
        print("You chose the red door.")
        print("You go inside the room to find an empty red room.")
        print("SLAM!")
        print("As soon as you let go of the doorknob the door slams closed.")
        print("WHOOSH!")
        print("Fire shoots down from the ceiling. Burning you into a crisp.\n")
        print("GAME OVER")
      elif three_doors == "blue" or three_doors =="Blue":
        print("You chose the Blue door.")
        print("You go inside the room to find yourself back outside.")
        print("SLAM!")
        print("As soon as you let go of the doorknob the door slams closed.\n")
        print("You find yourself infront of a large dark beast, you look up and see that it has holes where it's eyes should be.")
        print("It reaches a large arm down grabs you.\n")
        print("CRUNCH!\n")
        print("SQUELCH!\n")
        print("GURGLE! GURGLE\n")
        print("The monster guarding the treasure found you.")
        print("You were it's lunch.")
        print("\nGAME OVER")
      elif three_doors == "yellow" or three_doors == "Yellow":
        print("You chose the Yellow door.")
        print("You go inside the room to find yourself back outside.")
        print("SLAM!")
        print("As soon as you let go of the doorknob the door slams closed.\n")
        print("If front of you are stairs that lead down endlessly.")
        print("Without much choice you go onward..")
        print("After what feels like an eternity later you see light at the bottom of the stairs.")
        print("When you reach the bottom of the stairs you find yourself in a room filled top to bottom in gold, coins, jewelry and more riches than you could ever dream of.\n")
        print("CONGRADULATIONS YOU FOUND THE TREASURE!\n")
        print("\nYOU WIN!!")




    else:
      print("GAME OVER")
  
  elif river == "swim":
    print("You chose to swim across the river\n")
    print("You scared the Giant Trout.\n")
    print("SPLASH! SPLASH! SPLASH!\n")
    print("CRUNCH! SQUELCH!\n")
    print("A school of trout attacked you.")
    print("Your head was crushed.\n")
    print("GAME OVER")

  
  else:
    print("Invalid response: Exiting game")
    print("GAME OVER")
  
elif fork_in_path == "R" or fork_in_path == "r":
  print("You go to the right.")
  print("SPLAT!")
  print("You fell into a hole.\nGAME OVER")
else:
  print("You Exit Game.\nGAME OVER")
